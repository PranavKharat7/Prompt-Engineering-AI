        <!-- Hero Section -->
        <div class="hero-section" id="hero">
            <h1 class="hero-title">üé≠ Menu Actions Pattern</h1>
            <p class="hero-subtitle">Transforming AI Interactions Through Structured Choice Architecture</p>
            <div class="hero-nav">
                <a href="#definition" class="hero-btn">üîç Explore Definition</a>
                <a href="#examples" class="hero-btn">üéØ See Examples</a>
                <a href="#formats" class="hero-btn">üé® View Formats</a>
                <a href="#quiz" class="hero-btn">üß© Take Quiz</a>
