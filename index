    <script>
        // Scroll indicator functionality
        window.addEventListener('scroll', () => {
            const scrolled = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
            document.querySelector('.scroll-indicator').style.width = scrolled + '%';
        });
        
        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
        
        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Section visibility animation
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };
        
        const sectionObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);
        
        document.querySelectorAll('.section').forEach(section => {
            sectionObserver.observe(section);
        });
        
        // Active navigation highlighting
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('.section[id], .hero-section[id]');
            const navItems = document.querySelectorAll('.nav-item[href^="#"]');
            
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 150;
                if (pageYOffset >= sectionTop) {
                    current = section.getAttribute('id');
                }
            });
            
            navItems.forEach(item => {
                item.classList.remove('active');
                if (item.getAttribute('href').slice(1) === current) {
                    item.classList.add('active');
                }
            });
        });
        
        // Neural Network Interactive Functions
        let currentSceneIndex = 1;
        
        function activateNode(node) {
            // Remove active class from all nodes
            document.querySelectorAll('.network-node').forEach(n => {
                n.classList.remove('active');
            });
            
            // Activate clicked node
            node.classList.add('active');
            
            // Update display based on node data
            const nodeInfo = node.dataset.info;
            const display = document.getElementById('nodeDisplay');
            
            const nodeData = {
                problem: {
                    title: 'üòµ‚Äçüí´ The Problem State',
                    description: 'Users face overwhelming information when AI provides unstructured responses. Cognitive overload leads to decision paralysis and poor user experience.',
                    metrics: [
                        { value: '78%', label: 'Users Feel Overwhelmed' },
                        { value: '45%', label: 'Abandon Tasks Early' },
                        { value: '23%', label: 'Satisfaction Rate' },
                        { value: '3.2s', label: 'Decision Time' }
                    ]
                },
                confusion: {
                    title: '‚ùì Information Chaos',
                    description: 'Without structure, users struggle to find relevant information, leading to frustration and inefficient interactions with AI systems.',
                    metrics: [
                        { value: '56%', label: 'Can\'t Find Answers' },
                        { value: '67%', label: 'Multiple Attempts' },
                        { value: '89%', label: 'Want Better Organization' },
                        { value: '4.7x', label: 'Longer Sessions' }
                    ]
                },
                definition: {
                    title: 'üéØ Pattern Definition',
                    description: 'Menu Actions Pattern structures AI interactions through organized, labeled options that guide users to specific outcomes efficiently.',
                    metrics: [
                        { value: '100%', label: 'Clear Structure' },
                        { value: '95%', label: 'Predictable Outcomes' },
                        { value: '87%', label: 'User Control' },
                        { value: '92%', label: 'Clarity Improvement' }
                    ]
                },
                menu: {
                    title: 'üìã Menu Implementation',
                    description: 'Strategic organization of choices into logical categories, enabling users to quickly identify and select their desired path forward.',
                    metrics: [
                        { value: '73%', label: 'Faster Completion' },
                        { value: '89%', label: 'User Satisfaction' },
                        { value: '45%', label: 'Cost Reduction' },
                        { value: '92%', label: 'Success Rate' }
                    ]
                },
                structure: {
                    title: 'üèóÔ∏è Architectural Benefits',
                    description: 'Hierarchical organization creates scalable, maintainable interaction patterns that adapt to complex user needs while remaining intuitive.',
                    metrics: [
                        { value: '3x', label: 'Faster Navigation' },
                        { value: '65%', label: 'Reduced Support' },
                        { value: '40%', label: 'Higher Retention' },
                        { value: '78%', label: 'Accuracy Improvement' }
                    ]
                },
                choice: {
                    title: '‚ú® User Empowerment',
                    description: 'Giving users control over their journey increases engagement, satisfaction, and successful task completion across all interaction types.',
                    metrics: [
                        { value: '94%', label: 'Feel In Control' },
                        { value: '82%', label: 'Return Users' },
                        { value: '3.8x', label: 'Higher Engagement' },
                        { value: '91%', label: 'Recommend to Others' }
                    ]
                },
                success: {
                    title: 'üéâ Successful Outcomes',
                    description: 'Measurable improvements in user experience, business metrics, and operational efficiency demonstrate the pattern\'s real-world value.',
                    metrics: [
                        { value: '350%', label: 'Duolingo Growth' },
                        { value: '65%', label: 'Call Reduction' },
                        { value: '40%', label: 'Course Completion' },
                        { value: '78%', label: 'Healthcare Accuracy' }
                    ]
                },
                satisfaction: {
                    title: 'üòä User Delight',
                    description: 'Beyond efficiency gains, the pattern creates positive emotional experiences that build user loyalty and brand advocacy.',
                    metrics: [
                        { value: '89%', label: 'Satisfaction Score' },
                        { value: '4.7/5', label: 'User Rating' },
                        { value: '85%', label: 'Would Recommend' },
                        { value: '92%', label: 'Return Rate' }
                    ]
                }
            };
            
            const data = nodeData[nodeInfo];
            if (data) {
                display.innerHTML = `
                    <h5 style="color: #fbbf24; margin-bottom: 15px; font-size: 1.3em;">${data.title}</h5>
                    <p style="margin-bottom: 20px; color: rgba(255,255,255,0.9);">${data.description}</p>
                    <div class="data-visualization">
                        ${data.metrics.map(metric => `
                            <div class="data-point">
                                <div class="data-metric">${metric.value}</div>
                                <div class="data-label">${metric.label}</div>
                            </div>
                        `).join('')}
                    </div>
                `;
                
                // Animate the display update
                display.style.transform = 'scale(0.95)';
                display.style.opacity = '0.7';
                setTimeout(() => {
                    display.style.transform = 'scale(1)';
                    display.style.opacity = '1';
                }, 200);
            }
        }
        
        function highlightPathway(step) {
            // Remove highlight from all steps
            document.querySelectorAll('.pathway-step').forEach(s => {
                s.style.background = 'rgba(30, 27, 75, 0.8)';
                s.style.transform = 'translateX(0) scale(1)';
                s.style.borderColor = '#8b5cf6';
                s.style.boxShadow = 'none';
            });
            
            // Highlight selected step
            step.style.background = 'rgba(139, 92, 246, 0.3)';
            step.style.transform = 'translateX(20px) scale(1.02)';
            step.style.borderColor = '#fbbf24';
            step.style.boxShadow = '0 20px 40px rgba(139, 92, 246, 0.4)';
            
            setTimeout(() => {
                step.style.boxShadow = 'none';
            }, 1000);
        }
        
        // Story Navigation Functions
        function changeScene(direction) {
            const totalScenes = 5;
            const newScene = currentSceneIndex + direction;
            
            if (newScene < 1 || newScene > totalScenes) return;
            
            // Hide current scene
            const currentSceneEl = document.getElementById(`scene${currentSceneIndex}`);
            if (currentSceneEl) {
                currentSceneEl.classList.remove('active');
            }
            
            // Show new scene
            currentSceneIndex = newScene;
            setTimeout(() => {
                const newSceneEl = document.getElementById(`scene${currentSceneIndex}`);
                if (newSceneEl) {
                    newSceneEl.classList.add('active');
                }
            }, 250);
            
            // Update navigation
            document.getElementById('currentScene').textContent = currentSceneIndex;
            document.getElementById('prevBtn').disabled = currentSceneIndex === 1;
            document.getElementById('nextBtn').disabled = currentSceneIndex === totalScenes;
            
            // Update button text for last scene
            if (currentSceneIndex === totalScenes) {
                document.getElementById('nextBtn').textContent = 'Restart Story';
                document.getElementById('nextBtn').disabled = false;
                document.getElementById('nextBtn').onclick = () => {
                    currentSceneIndex = 0;
                    changeScene(1);
                    document.getElementById('nextBtn').textContent = 'Next ‚Üí';
                    document.getElementById('nextBtn').onclick = () => changeScene(1);
                };
            }
        }
        
        function selectOption(option) {
            // Remove selection from all options
            document.querySelectorAll('.demo-option').forEach(opt => {
                opt.style.background = 'rgba(255, 255, 255, 0.8)';
                opt.style.transform = 'translateX(0)';
            });
            
            // Highlight selected option
            option.style.background = 'rgba(102, 126, 234, 0.2)';
            option.style.transform = 'translateX(10px) scale(1.02)';
            
            // Show feedback
            setTimeout(() => {
                alert(`‚úÖ Excellent choice! You selected: ${option.textContent.trim()}\n\nThe AI will now provide focused, relevant information about this specific topic instead of overwhelming you with everything at once!\n\nThis demonstrates how the Menu Actions Pattern creates a more efficient and user-friendly experience.`);
                option.style.background = 'rgba(255, 255, 255, 0.8)';
                option.style.transform = 'translateX(0)';
            }, 500);
        }
        
        // Quiz functionality
        document.querySelectorAll('.quiz-option').forEach(option => {
            option.addEventListener('click', function() {
                const isCorrect = this.dataset.correct === 'true';
                const allOptions = this.parentElement.querySelectorAll('.quiz-option');
                
                // Reset all options in this question
                allOptions.forEach(opt => {
                    opt.classList.remove('correct', 'incorrect');
                });
                
                // Show correct answers
                allOptions.forEach(opt => {
                    if (opt.dataset.correct === 'true') {
                        opt.classList.add('correct');
                    } else if (opt === this && !isCorrect) {
                        opt.classList.add('incorrect');
                    }
                });
                
                // Show feedback
                setTimeout(() => {
                    if (isCorrect) {
                        alert('üéâ Correct! Excellent understanding of the Menu Actions Pattern!');
                    } else {
                        alert('‚ùå Not quite right. The correct answer is highlighted in green. Review the material and try again!');
                    }
                }, 300);
            });
        });
        
        // Interactive menu items in success showcase
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.background = 'rgba(255,255,255,0.4)';
                this.style.transform = 'scale(1.15) rotate(-3deg)';
                
                setTimeout(() => {
                    this.style.background = 'rgba(255,255,255,0.2)';
                    this.style.transform = 'scale(1)';
                }, 400);
            });
        });
        
        // Add click effects to interactive cards
        document.querySelectorAll('.purpose-card, .app-card, .concept-card').forEach(card => {
            card.addEventListener('click', function() {
                this.style.transform = 'scale(1.02)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });
        
        // Initialize
        document.getElementById('prevBtn').disabled = true;
        document.getElementById('totalScenes').textContent = '5';
    </script>
</body>
</html>
